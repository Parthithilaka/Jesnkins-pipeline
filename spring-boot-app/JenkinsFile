agent any
    tools {
        maven 'maven'
    }
    stages {
        stage ('scm') {
            steps {
                echo "image pulled from docekrhub and version is ${params.version}"
            }
        }
        stage ('build') {
            steps {
                sh 'mvn clean package '
            }
        }
        stage ('docker') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
                        echo "Pulling the image from private Docker Hub repo"
                        def image = docker.image("${params.version}")
                        image.pull()
                        echo "Image pulled successfully"
                    }
                }   
            }
        }
    }
}
